{
  "name": "githooks-demo",
  "version": "1.0.0",
  "description": "",
  "main": "husky.config.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "precommit-server": "cd server && node test.js",
    "precommit-client": "cd client && node test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xiaodongzai/githooks-demo.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/xiaodongzai/githooks-demo/issues"
  },
  "homepage": "https://github.com/xiaodongzai/githooks-demo#readme",
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "cz-emoji": "^1.2.2",
    "husky": "^4.3.0"
  },
  "dependencies": {
    "lint-staged": "^10.4.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    },
    "cz-emoji": {
      "types": [
        {
          "name": "feat \t\t🌟  A new feature",
          "value": ":star2:"
        },
        {
          "name": "fix \t\t🐞  A bug fix",
          "value": ":beetle:"
        },
        {
          "name": "style \t✏️  Doesn't affect the meaning of the code (white-space, semi-colons, etc)",
          "value": ":pencil2:"
        },
        {
          "name": "refactor \t🎨  Neither fixes a bug nor adds a feature",
          "value": ":art:"
        },
        {
          "name": "build \t🚀  Build system config or external dependencies ($compile)",
          "value": ":rocket:"
        },
        {
          "name": "docs \t\t📚  Documentation change",
          "value": ":books:"
        },
        {
          "name": "revert \t💊  Reverts a previous commit",
          "value": ":pill:"
        }
      ],
      "skipQuestions": ["scope", "issues", "body"]
    }
  }

}
